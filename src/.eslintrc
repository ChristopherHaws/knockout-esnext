{
    "env": {
        "jest": false,
        "browser": true,
        "meteor": false,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "templateStrings": true
        },
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "eqeqeq": 2,
        "curly": [2, "all"],
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "comma-dangle": ["error", "never"],
        "max-len": [1, {"code": 200, "ignoreRegExpLiterals": true, "ignoreTemplateLiterals": true, "ignoreStrings": true, "ignoreComments": true}],
        "quotes": [0, "single"],
        "no-mixed-spaces-and-tabs": [2],
        "no-multi-assign": 0,
        "no-whitespace-before-property": 2,
        "no-alert": 2,
        "no-fallthrough": 1,
        "no-eval": 2,
        "no-prototype-builtins": 0,
        "no-trailing-spaces": 0,
        "no-unused-expressions": 0,
        "no-tabs": 2,
        "no-console": 0,
        "no-unused-vars": [2, {"vars": "local", "args": "none"}],
        "no-else-return": 2,
        "space-unary-ops": [2, {"words": true, "nonwords": false}],
        "linebreak-style": [0, "unix"],
        "semi": [2, "always"],
        "no-cond-assign": 0,
        "no-lonely-if": 2,
        "array-bracket-spacing": [2, "never"],
        "camelcase": [1, {"properties": "always"}],
        "object-curly-spacing": [2, "never"],
        "eol-last": 0,
        "no-path-concat": 2,
        "radix": 2,
        "wrap-iife": [2, "inside"],
        "yoda": [2, "never"],
        "no-implicit-globals": 2,
        "no-useless-escape": 1
    },
    "globals": {
        "ko": false,
        "DEBUG": false
    },
    "plugins": [
        "log-filenames"
    ]
}
